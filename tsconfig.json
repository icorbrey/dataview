{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "NodeNext",
        "baseUrl": "./src",
        "outDir": "./dist",
        "target": "ESNext",
        "sourceMap": true,
        "allowJs": true
    },
    "include": ["src/**/*.js", "src/**/*.ts"]
}
